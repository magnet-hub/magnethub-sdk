{
  // Completely disable all formatting
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.defaultFormatter": null,
  
  // Disable Prettier
  "prettier.enable": false,
  
  // Only ESLint auto-fix (no formatting)
  "editor.codeActionsOnSave": {},

  // File-specific - explicitly disable formatting
  "[javascript]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false
  },
  "[json]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false
  },
  "[markdown]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false,
    "editor.wordWrap": "on"
  },

  // ESLint Settings
  "eslint.validate": ["javascript"],
  "eslint.workingDirectories": [{ "mode": "auto" }],

  // Files to exclude
  "files.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "**/dist": true
  },

  // Search exclusions
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/package-lock.json": true
  },

  // Recommendations
  "extensions.ignoreRecommendations": false
}
